# Some shared hosts disable the Options directive, which would result in a 500 error.
# We avoid using it here and rely on the rewrite rules below to handle requests safely.
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    RewriteRule ^$ index.php [L]

    RewriteCond %{QUERY_STRING} (^|&)route=
    RewriteRule ^ index.php [L]

    RewriteRule ^(.+)$ index.php?route=$1 [L,QSA]
</IfModule>
